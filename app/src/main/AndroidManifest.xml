<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tbadhit.blogidn">
    <!-- (GLAM) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlogIDN"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".DetailBlogActivity"
            android:label="@string/title_activity_detail_blog"
            android:theme="@style/Theme.BlogIDN.NoActionBar"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
<!--    Setelah menambahkan kode yang di komen (GLAM), sekarang kembali ke "MainActivity" tambahkan code yang dikomen (GLAML) -> -->

</manifest>